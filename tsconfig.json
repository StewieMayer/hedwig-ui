{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "lib": ["ESNext","DOM", "DOM.Iterable"],
    "resolveJsonModule": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
